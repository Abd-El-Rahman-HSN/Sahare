<h1>الاصناف</h1>
  <%= link_to(new_item_date_path, class: "btn btn-success",style: "float: left;") do %>
  اضافة بيانات الاصناف <i class="icon-plus icon-white" ></i>
      <% end %>


      <br>
      <br>
      <br>

<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>كود الصنف</th>
      <th>اسم الصنف</th>
      <th>المجموعة</th>
      <th>الوصف</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @item_dates.each do |item_date| %>
      <tr>
        <td><%= item_date.itemcode %></td>
        <td><%= item_date.itemname %></td>
        <td><%= item_date.category %></td>
        <td><%= item_date.description %></td>
        <td><%= link_to 'عرض', edit_item_date_path(item_date) %>
            <%= link_to 'مسح', item_date_path(item_date),
                method: :delete,
                data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table><br>

