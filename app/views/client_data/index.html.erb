
  <h1>العملاء</h1>

  <%= link_to(new_client_datum_path, class: "btn btn-success" ,style: "float: left;") do %>
  اضافه عميل  <i class="icon-plus icon-white"></i>
<% end %>
<br>
<br>
<br>
<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>كود العميل</th>
      <th>الاسم</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @client_data.each do |client_datum| %>
      <tr>
        <td><%= client_datum.code %></td>
        <td><%= client_datum.name %></td>
        <td><%= link_to 'عرض', client_datum %>
          <%= link_to 'تعديل', edit_client_datum_path(client_datum) %>
          <%= link_to 'مسح', client_datum_path(client_datum),
                method: :delete,
                data: { confirm: 'Are you sure?' } %></td>
  
      </tr>
    <% end %>
  </tbody>
</table>

<br>
