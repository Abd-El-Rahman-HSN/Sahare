<p id="notice"><%= notice %></p>

<h1>المواقع</h1>

<%= link_to(new_location_path, class: "btn btn-success" ,style: "float: left;") do %>
اضافه موقع  <i class="icon-plus icon-white"></i>
<% end %>

<br><br><br>

<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>كود الموقع</th>
      <th>اسم الموقع</th>
      <th>موقع المهندس</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= location.loccode %></td>
        <td><%= location.project %></td>
        <td><%= location.siteeng %></td>
        <td><%= link_to 'عرض', location %>
          <%= link_to 'تعديل', edit_location_path(location) %>
          <%= link_to 'مسح', location_path(location),
                method: :delete,
                data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

