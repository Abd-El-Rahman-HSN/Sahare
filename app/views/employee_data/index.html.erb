
  
    <h1>الموظفين</h1>
    <%= link_to(new_employee_datum_path, class: "btn btn-success",style: "float: left;") do %>
    اضافة بيانات الموظف <i class="icon-plus icon-white"></i>
    <% end %>

    <br/>
    <br/>
    <br/>
<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>الاسم</th>
      <th>الوظيفة</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employee_data.each do |employee_datum| %>
      <tr>
        <td><%= employee_datum.name %></td>
        <td><%= employee_datum.role %></td>
        <td><%= employee_datum.user %></td>
        <td><%= link_to 'عرض', employee_datum %>
          <%= link_to 'تعديل', edit_employee_datum_path(employee_datum) %>
          <%= link_to 'مسح', employee_datum_path(employee_datum),
                method: :delete,
                data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

