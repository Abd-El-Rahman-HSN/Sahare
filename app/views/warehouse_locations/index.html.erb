
<h1>مخازن المواقع</h1>
<%= link_to(new_warehouse_location_path, class: "btn btn-success" ,style: "float: left;") do %>
اضافه مخزن  <i class="icon-plus icon-white"></i>
<% end %>

<br><br><br>
<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>كود المخزن</th>
      <th>اسم المخزن</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @warehouse_locations.each do |warehouse_location| %>
      <tr>
        <td><%= warehouse_location.warloccode %></td>
        <td><%= warehouse_location.warlocname %></td>
        <td><%= link_to 'عرض', warehouse_location %>
          <%= link_to 'تعديل', edit_warehouse_location_path(warehouse_location) %>
          <%= link_to 'مسح', warehouse_path(warehouse_location),
                method: :delete,
                data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

