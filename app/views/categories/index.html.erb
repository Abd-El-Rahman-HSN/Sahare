
<h1>المجموعات</h1>
<%= link_to(new_category_path, class: "btn btn-success",style: "float: left;") do %>
اضافة مجموعة <i class="icon-plus icon-white" ></i>
    <% end %>

    <br>
    <br>
    <br>

<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>المجموعة</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.categorys %></td>
        <td><%= link_to 'عرض', category %>
          <%= link_to 'تعديل', edit_category_path(category) %>
          <%= link_to 'مسح', category_path(category),
                method: :delete,
                data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

