<button type="button" class="btn btn-success" data-toggle="modal" style="float: left;" data-target=".bs-example-modal-lg">اضافة حركة اصناف</button>
<div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h1 class="modal-title" id="exampleModalLabel">اضافة الاصناف</h1>
          </div>
          <div class="modal-body">
            <form>
              <%= simple_form_for(@warehouse_location) do |f| %>
              <div id='tasks'>
                    <table class="table" >
                        <thead>
                          <tr>
                            <th><h3 style="float: right;" >الصنف</h3></th>
                            <th><h3 style="float: right;">الكمية</h3></th>
                            <th colspan="3"></th>
                          </tr>
                        </thead>
                        
                          <%= f.simple_fields_for :tasks do |task| %>
                            <%= render 'task_fields', :f => task %>
                          <% end %>
                        </table>
                  <div class='links'>
                    <%= link_to_add_association 'add task', f, :tasks ,class: "btn btn-success" %>
                  </div>
                </div>
            </form>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            <%= f.submit 'Save', class: "btn btn-primary" %>
          </div>
          <% end %>
    </div>
  </div>
</div>
