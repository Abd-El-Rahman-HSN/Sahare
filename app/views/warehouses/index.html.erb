<p id="notice"><%= notice %></p>

<h1>المخازن</h1>
<%= link_to(new_warehouse_path, class: "btn btn-success" ,style: "float: left;") do %>
اضافه مخزن  <i class="icon-plus icon-white"></i>
<% end %>

<br><br><br>

<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>كود المخزن</th>
      <th>اسم المخزن</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @warehouses.each do |warehouse| %>
      <tr>
        <td><%= warehouse.warcode %></td>
        <td><%= warehouse.warname %></td>
        <td><%= link_to 'عرض', warehouse %>
          <%= link_to 'تعديل', edit_warehouse_path(warehouse) %>
          <%= link_to 'مسح', warehouse_path(warehouse),
                method: :delete,
                data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

