

    <h1>المشروعات</h1>
    <%= link_to(new_project_path, class: "btn btn-success",style: "float: left;") do %>
    اضافة بيانات المشروع <i class="icon-plus icon-white" ></i>
        <% end %>

  <br>
  <br>
  <br>

<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>كود المشروع</th>
      <th>اسم المشروع</th>
      <th>العميل</th>
      <th>تاريخ البداية</th>
      <th>مدير المشروع</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.projcode %></td>
        <td><%= project.projname %></td>
        <td><%= project.client %></td>
        <td><%= project.startdate %></td>
        <td><%= project.projmanager %></td>
        <td><%= link_to 'عرض', project %>
          <%= link_to 'تعديل', edit_project_path(project) %>
          <%= link_to 'مسح', project_path(project),
                method: :delete,
                data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

